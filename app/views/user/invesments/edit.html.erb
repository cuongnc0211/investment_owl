<h1>Editing invesment</h1>

<%= turbo_frame_tag "invesment" do %>
  <div class="container p-5">
    <%= form_for [:user, @invesment],
      data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"} do |f|
    %>
      <% if @invesment.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@invesment.errors.count, "error") %> prohibited this invesment from being saved:</h2>

          <ul>
            <% @invesment.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group mb-3'>
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class='form-group mb-3'>
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control", rows: 3 %>
      </div>

      <div class='form-group mb-3'>
        <%= f.submit 'Update', class: "btn btn-primary" %>
        <%= link_to "Cancel", user_invesments_path %>
      </div>
    <% end %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this invesment", user_invesment_path(@invesment) %> |
  <%= link_to "Back to invesments", user_invesments_path %>
</div>
