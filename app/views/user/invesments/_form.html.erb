  <% end %>

  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class='form-group'>
    <%= f.label :capital_cents %>
    <%= f.text_field :capital_cents %>
  </div>

  <div class='form-group'>
    <%= f.label :current_value_cents %>
    <%= f.text_field :current_value_cents %>
