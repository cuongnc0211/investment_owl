<%= form_for [:user, invesment, value_history], class: "row row-cols-lg-auto g-3 align-items-center",
  data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"} do |f|
%>
  <% if value_history.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(value_history.errors.count, "error") %> prohibited this value_history from being saved:</h2>

      <ul>
        <% value_history.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-sm-7">
      <%= f.number_field :current_value, class: "form-control", placeholder: 'Current Value' %>
    </div>
    <div class="col-sm">
      <%= f.submit 'Submit', class: "btn btn-primary" %>
      <%= link_to 'Cancel', user_invesments_path %>
    </div>
  </div>
<% end %>
