<%= form_for [:user, invesment, value_history],
  data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"} do |f|
%>
  <% if value_history.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(value_history.errors.count, "error") %> prohibited this value_history from being saved:</h2>

      <ul>
        <% value_history.errors.each do |error| %>
