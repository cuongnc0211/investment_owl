<%= form_for [:user, invesment] do |f| %>
  <% if invesment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(invesment.errors.count, "error") %> prohibited this invesment from being saved:</h2>

      <ul>
        <% invesment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class='form-group'>
    <%= f.label :capital %>
    <%= f.text_field :capital %>
  </div>

  <% unless f.object.persisted? %>

    <% f.object.value_histories.build %>

    <div class='form-group'>
      <%= f.fields_for :value_histories do |ff| %>
        <%= ff.label :current_value %>
        <%= ff.text_field :current_value %>
      <% end %>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label :status %>
    <%= f.select :status, options_for_select(Invesment.statuses, f.object.status) %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
